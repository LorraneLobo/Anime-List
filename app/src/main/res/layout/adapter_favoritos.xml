<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:gravity="center"
    android:orientation="horizontal">


    <ImageView
        android:id="@+id/imageAnime"
        android:layout_width="100dp"
        android:layout_height="150dp"
        android:layout_marginRight="5dp"
        app:srcCompat="@drawable/no_image" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textTituloAnime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            tools:text="Titulo Anime" />

        <TextView
            android:id="@+id/textDescricaoAnime"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:text="Descricao do anime" />
    </LinearLayout>

    <ImageButton
        android:id="@+id/btnFavoritar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        app:srcCompat="@drawable/ic_favorito_24" />

</LinearLayout>